@namespace Flowly.Web
@inherits LayoutComponentBase
@using Flowly.Web.Shared
@using Microsoft.Extensions.Localization
@using Flowly.Web.Resources
@inject IStringLocalizer<SharedResources> T

<link rel="stylesheet" href="/css/auth.css" />

<header class="navbar">
    <a href="/" class="logo">Flowly</a>
    <nav class="links">
        <a href="/dashboard">@T["Nav_Dashboard"]</a>
        <a href="/notes">@T["Nav_Notes"]</a>
        <a href="/todos">@T["Nav_Todos"]</a>
        <a href="/finance">@T["Nav_Finance"]</a>
        <a href="/profile">@T["Nav_Profile"]</a>
        <a href="/auth/logout">@T["Nav_Logout"]</a>
    </nav>
    <div class="right"><CultureSwitch /></div>
</header>

<main class="content">
    @Body
</main>

<style>
.navbar{display:flex;align-items:center;gap:1rem;justify-content:space-between;padding:.75rem 1rem;background:var(--card);border-bottom:1px solid var(--card-border)}
.logo{font-weight:700;color:var(--fg);text-decoration:none}
.links{display:flex;gap:.8rem;flex-wrap:wrap}
.links a{color:var(--fg);text-decoration:none}
.links a:hover{text-decoration:underline}
.right{display:flex;align-items:center;gap:.5rem}
.content{padding:1rem;min-height:calc(100vh - 56px)}
@@media (max-width: 600px){ .links{display:none} }
</style>