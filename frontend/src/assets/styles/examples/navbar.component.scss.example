// Navbar Component Styles - АДАПТОВАНО ДЛЯ СИСТЕМИ ТЕМ
// =====================================================
// Цей файл показує, як navbar.component.scss виглядатиме після міграції

// Navbar Header
.navbar {
  background: var(--navbar-bg);
  border-bottom: 1px solid var(--navbar-border);
  padding: var(--spacing-md) var(--spacing-xl);
  position: sticky;
  top: 0;
  z-index: 1000;
  transition: var(--transition-base);

  .navbar-content {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
}

// Left Section
.navbar-left {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);

  .logo {
    width: 40px;
    height: 40px;
    border-radius: var(--border-radius);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: var(--transition-fast);
    cursor: pointer;
    flex-shrink: 0;
    background: var(--primary);

    &:hover {
      transform: scale(1.05);
    }

    svg {
      filter: drop-shadow(var(--shadow-sm));
    }
  }

  .app-title {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    user-select: none;
    cursor: default;
    flex-shrink: 0;
  }
}

// Right Section
.navbar-right {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);

  .icon-btn {
    padding: var(--spacing-sm);
    border: none;
    border-radius: var(--border-radius);
    background: var(--bg-hover);
    color: var(--text-primary);
    cursor: pointer;
    transition: var(--transition-fast);
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    outline: none;

    &:hover {
      background: var(--bg-active);
      transform: translateY(-1px);
    }

    &:active {
      transform: translateY(0);
    }

    &.active {
      background: var(--primary-light);
      color: var(--primary);

      svg {
        stroke: var(--primary);
      }

      &:hover {
        background: var(--primary-light);
      }
    }

    svg {
      display: block;
    }
  }

  .lang-btn {
    padding: var(--spacing-sm) var(--spacing-md);
    font-size: 0.875rem;
    font-weight: 600;

    span {
      line-height: 1;
    }
  }

  .user-avatar {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: var(--transition-fast);
    box-shadow: var(--shadow);
    background: var(--secondary);
    outline: none;
    overflow: hidden;
    position: relative;

    &:hover {
      transform: scale(1.1);
      box-shadow: var(--shadow-md);
    }

    &:active {
      transform: scale(1.05);
    }

    .avatar-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .avatar-initials {
      font-size: 0.875rem;
      font-weight: 600;
      color: var(--text-inverse);
      user-select: none;
    }

    svg {
      filter: drop-shadow(var(--shadow-sm));
    }
  }
}

// User Menu Container
.user-menu-container {
  position: relative;
}

// Language Menu Container
.language-menu-container {
  position: relative;
}

// User Dropdown Menu
.user-dropdown {
  position: absolute;
  top: calc(100% + var(--spacing-sm));
  right: 0;
  min-width: 240px;
  background: var(--card-bg);
  border: 1px solid var(--card-border);
  border-radius: var(--border-radius-md);
  box-shadow: var(--shadow-lg);
  padding: var(--spacing-sm) 0;
  z-index: 1001;
  animation: dropdownSlide var(--animation-speed) ease-out;

  .dropdown-header {
    padding: var(--spacing-md) var(--spacing-md);

    .user-info {
      .user-name {
        font-size: 0.9375rem;
        font-weight: 600;
        color: var(--text-primary);
        margin: 0 0 var(--spacing-xs) 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      .user-email {
        font-size: 0.8125rem;
        color: var(--text-secondary);
        margin: 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }
    }
  }

  .dropdown-divider {
    height: 1px;
    background: var(--border-color);
    margin: var(--spacing-sm) 0;
  }

  .dropdown-item {
    width: 100%;
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    padding: var(--spacing-md) var(--spacing-md);
    background: transparent;
    border: none;
    color: var(--text-primary);
    font-size: 0.9375rem;
    cursor: pointer;
    transition: var(--transition-fast);
    text-align: left;

    svg {
      flex-shrink: 0;
      stroke: var(--text-secondary);
      transition: var(--transition-fast);
    }

    &:hover {
      background: var(--bg-hover);

      svg {
        stroke: var(--primary);
      }
    }

    &.logout {
      color: var(--danger);

      svg {
        stroke: var(--danger);
      }

      &:hover {
        background: var(--danger-light);

        svg {
          stroke: var(--danger);
        }
      }
    }
  }
}

// Language Dropdown Menu
.language-dropdown {
  position: absolute;
  top: calc(100% + var(--spacing-sm));
  right: 0;
  min-width: 220px;
  background: var(--card-bg);
  border: 1px solid var(--card-border);
  border-radius: var(--border-radius-md);
  box-shadow: var(--shadow-lg);
  padding: var(--spacing-sm) 0;
  z-index: 1001;
  animation: dropdownSlide var(--animation-speed) ease-out;

  .dropdown-header {
    padding: var(--spacing-md) var(--spacing-md);

    .dropdown-title {
      font-size: 0.8125rem;
      font-weight: 600;
      color: var(--text-secondary);
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
  }

  .dropdown-divider {
    height: 1px;
    background: var(--border-color);
    margin: var(--spacing-sm) 0;
  }

  .language-item {
    width: 100%;
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    padding: var(--spacing-md) var(--spacing-md);
    background: transparent;
    border: none;
    cursor: pointer;
    transition: var(--transition-fast);
    text-align: left;

    .language-flag {
      font-size: 1.5rem;
      line-height: 1;
      flex-shrink: 0;
    }

    .language-info {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: var(--spacing-xs);

      .language-native {
        font-size: 0.9375rem;
        font-weight: 500;
        color: var(--text-primary);
        line-height: 1.2;
      }

      .language-name {
        font-size: 0.8125rem;
        color: var(--text-secondary);
        line-height: 1.2;
      }
    }

    .check-icon {
      flex-shrink: 0;
      stroke: var(--primary);
    }

    &:hover {
      background: var(--bg-hover);
    }

    &.active {
      background: var(--primary-light);
    }
  }
}

// Menu Backdrop
.menu-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  background: transparent;
}

// Navigation Tabs
.tabs-container {
  background: var(--navbar-bg);
  border-bottom: 1px solid var(--navbar-border);
}

.tabs {
  width: 100%;
  padding: var(--spacing-md) var(--spacing-xl);
  display: flex;
  gap: var(--spacing-sm);

  .tab {
    -webkit-appearance: none;
    appearance: none;
    padding: var(--spacing-sm) var(--spacing-md);
    border: 1px solid transparent;
    border-radius: var(--border-radius);
    background: transparent;
    color: var(--text-secondary);
    cursor: pointer;
    font-size: 0.9375rem;
    font-weight: 500;
    transition: var(--transition-base);
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    outline: none;
    position: relative;
    overflow: hidden;

    &:hover:not(.active) {
      background: var(--bg-hover);
      border-color: var(--border-color);
      color: var(--text-primary);
    }

    &.active {
      background: transparent;
      border-color: var(--primary);
      color: var(--text-primary);
      box-shadow: none;

      .tab-icon svg {
        stroke: var(--primary);
      }
    }

    .tab-icon {
      display: flex;
      align-items: center;
      justify-content: center;

      svg {
        display: block;
        transition: var(--transition-fast);
      }
    }

    .tab-label {
      line-height: 1;
    }
  }
}

// Responsive Design
@media (max-width: 1200px) {
  .navbar-content,
  .tabs {
    padding-left: var(--spacing-lg);
    padding-right: var(--spacing-lg);
  }
}

@media (max-width: 768px) {
  .navbar {
    padding: var(--spacing-sm) var(--spacing-md);
  }

  .navbar-left {
    gap: var(--spacing-sm);

    .app-title {
      font-size: 1.25rem;
    }
  }

  .navbar-right {
    gap: var(--spacing-xs);

    .icon-btn {
      padding: var(--spacing-xs);

      svg {
        width: 18px;
        height: 18px;
      }
    }

    .user-avatar {
      width: 32px;
      height: 32px;

      svg {
        width: 18px;
        height: 18px;
      }
    }
  }

  .tabs {
    padding: var(--spacing-sm) var(--spacing-md);
    gap: var(--spacing-sm);
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;

    &::-webkit-scrollbar {
      display: none;
    }

    .tab {
      padding: var(--spacing-sm);
      font-size: 0.875rem;
      white-space: nowrap;
      flex-shrink: 0;

      .tab-icon svg {
        width: 16px;
        height: 16px;
      }
    }
  }
}

@media (max-width: 480px) {
  .navbar {
    padding: var(--spacing-xs) var(--spacing-sm);
  }

  .navbar-left {
    .logo {
      width: 32px;
      height: 32px;

      svg {
        width: 16px;
        height: 16px;
      }
    }

    .app-title {
      font-size: 1rem;
    }
  }

  .navbar-right {
    gap: var(--spacing-xs);

    .icon-btn {
      padding: var(--spacing-xs);

      svg {
        width: 16px;
        height: 16px;
      }
    }

    .user-avatar {
      width: 30px;
      height: 30px;

      svg {
        width: 16px;
        height: 16px;
      }
    }
  }

  .tabs {
    padding: var(--spacing-sm);
    gap: var(--spacing-xs);

    .tab {
      padding: var(--spacing-sm);
      font-size: 0.8125rem;

      .tab-icon {
        svg {
          width: 15px;
          height: 15px;
        }
      }

      .tab-label {
        font-size: 0.8125rem;
      }
    }
  }
}

// Focus visible for better keyboard navigation
.icon-btn:focus-visible,
.tab:focus-visible,
.user-avatar:focus-visible {
  outline: 2px solid var(--primary);
  outline-offset: 2px;
}

// Animations
@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes dropdownSlide {
  from {
    opacity: 0;
    transform: translateY(-8px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.navbar,
.tabs-container {
  animation: slideDown var(--animation-speed) ease-out;
}
