# Production Environment Variables for DigitalOcean
# Copy this to .env on your server and fill in the values

# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=flowly_prod
POSTGRES_USER=flowly_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!
DB_PORT=5432

# ============================================
# Paths (on server)
# ============================================
POSTGRES_DATA_PATH=/var/www/flowly/data/postgres
UPLOADS_PATH=/var/www/flowly/data/uploads

# ============================================
# ASP.NET Core Configuration
# ============================================
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:5000

# ============================================
# JWT Configuration
# ============================================
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING
JWT_ISSUER=https://your-domain.com
JWT_AUDIENCE=https://your-domain.com
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_EXPIRATION_DAYS=30

# ============================================
# Google OAuth (from Google Cloud Console)
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# Application Settings
# ============================================
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ============================================
# File Storage
# ============================================
FILE_STORAGE_PATH=/app/uploads
FILE_STORAGE_MAX_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx

# ============================================
# Logging
# ============================================
LOG_LEVEL=Warning
SERILOG_MIN_LEVEL=Warning

# ============================================
# Security
# ============================================
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_SPECIAL_CHAR=true
LOCKOUT_MAX_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_ENABLED=true

# ============================================
# Ports (Docker internal)
# ============================================
API_PORT=5000
WEB_PORT=80
